<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook colspan="4" position="inside">
                <page string="Google Cloud Printers">
                    <group>
                        <label for="google_cloudprint_authorization_code"/>
                        <div class="oe_inline">
                            <field name="google_cloudprint_authorization_code" class="oe_inline"/>
                            <field name="google_cloud_printer_uri" widget="url" text="(Generate Google Authorization Code)" class="oe_inline oe_bold"/>
                        </div>
                        <field name="google_cloudprint_refresh_token"/>
                    </group>
                    <button name="update_user_google_cloud_printers" type="object" string="⇒ Update Printers" class="oe_link" attrs="{'invisible': [('google_cloudprint_refresh_token', '=', False)]}"/>
                    <button name="update_user_google_cloud_printers_status" type="object" string=" ⇒ Refresh Printers Status" class="oe_link" attrs="{'invisible': [('google_cloudprint_refresh_token', '=', False)]}"/>
                    <a href="https://www.google.com/cloudprint#jobs" target="_blank"> ⇒ Check Jobs on GCP</a>
                    <a href="https://www.google.com/cloudprint#printers" target="_blank"> ⇒ Manage Printers on GCP</a>
                    <field name="gcprinter_ids" readonly="1"/>
                </page>
            </notebook>
        </field>
    </record>

    <record model="ir.ui.view" id="view_users_form_simple_modif">
        <field name="name">res.users.form.printing</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base_report_to_printer.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <group name="printing" position="before">
                <group string="Google Cloud Print" name="gcp">
                    <field name="google_cloudprint_refresh_token" invisible="1"/>
                    <label for="google_cloudprint_authorization_code"/>
                    <div class="oe_inline">
                        <field name="google_cloudprint_authorization_code" class="oe_inline"/>
                        <field name="google_cloud_printer_uri" widget="url" text="⇒ Generate Google Authorization Code" class="oe_inline oe_bold"/>
                        <button name="update_user_google_cloud_printers" type="object" string="⇒ Refresh Printers" class="oe_link" attrs="{'invisible': [('google_cloudprint_authorization_code', '=', False)]}"/>
                    </div>
                    <label for="gcprinter_ids" attrs="{'invisible': [('google_cloudprint_refresh_token', '=', False)]}"/>
                    <div class="oe_inline" attrs="{'invisible': [('google_cloudprint_refresh_token', '=', False)]}">
                        <field name="gcprinter_ids" class="oe_inline" widget="many2many_tags" readonly="1"/>
                        <a href="https://www.google.com/cloudprint#jobs" target="_blank">⇒ Check Jobs on GCP</a>
                        <a href="https://www.google.com/cloudprint#printers" target="_blank">⇒ Manage Printers on GCP</a>
                    </div>
                </group>
            </group>
        </field>
    </record>

</odoo>
